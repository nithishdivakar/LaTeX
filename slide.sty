\setcounter{part}{1}

\renewcommand{\thesection}{\arabic{section}}

\renewcommand{\part}[1]{
    \addcontentsline{toc}{part}{\thepart~#1}
    \clearpage
    \vspace*{\fill}
    \begin{center}
    \textsc{Part~}\thepart\\
      \begin{shaded}
        \vspace{20pt}
        \Huge\textsc{#1}
        \vspace{20pt}
      \end{shaded}
    \end{center}
    \vfill
    \addtocounter{part}{1}
    \setcounter{section}{1}
}

\renewcommand{\section}[1]{
  \addcontentsline{toc}{section}{\thesection~#1}
  \addtocounter{section}{1}
  \clearpage
  \vspace*{\fill}
  \begin{center}
    \Huge\textsc{#1}
  \end{center}
  \vfill
}



\newcommand{\slideheading}[1]{
{{\flushleft\Huge\textsc{#1}}}\hfill \break}%\par\noindent{}}



\newenvironment{slidebase}[2][]{
  \clearpage
  \newgeometry{left=#2,bottom=#2,top=#2,right=#2}
  \if\relax\detokenize{#1}\relax

  \else
    \addcontentsline{toc}{subsection}{#1}
    \noindent{}
    \slideheading{#1}
  \fi
  \vspace*{\fill}%
  \par\noindent{}%
}{
  \vfill
  \restoregeometry
}


\newenvironment{slide}[1][]
{\begin{slidebase}[#1]{2cm} }
{\end{slidebase}}


\newenvironment{slidemaximus}[1][]
{\begin{slidebase}[#1]{0.5cm} }
{\end{slidebase}}
